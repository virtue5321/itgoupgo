package com.itgoupgo.community.info.model.dao;

import java.util.List;

import org.apache.ibatis.session.RowBounds;
import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.stereotype.Repository;

import com.itgoupgo.community.info.model.vo.InfoBbs; // InfoBbs VO 사용

/**
 * 정보공유 게시판 Data Access Object (DAO)
 * MyBatis를 사용하여 데이터베이스와 통신합니다.
 */
@Repository
public class InfoDao {

    // MyBatis 네임스페이스를 "infoMapper"로 사용합니다.
    private static final String NAMESPACE = "infoMapper";

    /**
     * 전체 게시글 개수 조회
     * @param sqlSession MyBatis SqlSessionTemplate
     * @return 전체 게시글 수
     */
    public int selectListCount(SqlSessionTemplate sqlSession) {
        // "infoMapper" 네임스페이스의 "selectListCount" ID를 가진 쿼리를 실행
        return sqlSession.selectOne(NAMESPACE + ".selectListCount");
    }

    /**
     * 현재 페이지에 해당하는 게시글 목록 조회 (페이징 적용)
     * @param sqlSession MyBatis SqlSessionTemplate
     * @param rowBounds 페이징 처리를 위한 RowBounds 객체 (offset, limit 정보 포함)
     * @return 조회된 InfoBbs 목록
     */
    public List<InfoBbs> selectList(SqlSessionTemplate sqlSession, RowBounds rowBounds) {
        // "infoMapper" 네임스페이스의 "selectList" ID를 가진 쿼리를 실행
        return sqlSession.selectList(NAMESPACE + ".selectList", null, rowBounds);
    }

    /**
     * 특정 게시글 번호(infoNo)로 게시글 조회
     * @param sqlSession MyBatis SqlSessionTemplate
     * @param infoNo 조회할 게시글 번호
     * @return 조회된 InfoBbs 객체
     */
    public InfoBbs selectInfoBbs(SqlSessionTemplate sqlSession, int infoNo) {
        return sqlSession.selectOne(NAMESPACE + ".selectInfoBbs", infoNo);
    }

    /**
     * 게시글 조회수 1 증가
     * @param sqlSession MyBatis SqlSessionTemplate
     * @param infoNo 조회수 증가 대상 게시글 번호
     * @return 처리된 행의 수 (1이면 성공)
     */
    public int increaseInfoBbsCount(SqlSessionTemplate sqlSession, int infoNo) {
        return sqlSession.update(NAMESPACE + ".increaseInfoBbsCount", infoNo);
    }

    /**
     * 새로운 게시글 등록
     * @param sqlSession MyBatis SqlSessionTemplate
     * @param f 등록할 InfoBbs 객체 (제목, 내용, 작성자 회원번호 등 포함)
     * @return 처리된 행의 수 (1이면 성공)
     */
    public int insertInfoBbs(SqlSessionTemplate sqlSession, InfoBbs f) {
        return sqlSession.insert(NAMESPACE + ".insertInfoBbs", f);
    }

    /**
     * 게시글 삭제 (실제로는 삭제 상태를 'Y'로 업데이트)
     * @param sqlSession MyBatis SqlSessionTemplate
     * @param infoNo 삭제할 게시글 번호
     * @return 처리된 행의 수 (1이면 성공)
     */
    public int deleteInfoBbs(SqlSessionTemplate sqlSession, int infoNo) {
        // 상태값만 변경하는 UPDATE 쿼리를 호출하는 것이 일반적
        return sqlSession.update(NAMESPACE + ".deleteInfoBbs", infoNo);
    }
}
