package com.itgoupgo.community.it.model.dao;

import java.util.List;

import org.apache.ibatis.session.RowBounds;
import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.stereotype.Repository;

import com.itgoupgo.community.it.model.vo.ItBbs;

/**
 * IT뉴스 게시판 Data Access Object (DAO)
 * MyBatis를 이용해 DB에 직접 접근하여 CRUD 작업을 수행합니다.
 */
@Repository
public class ItDao {

	/**
	 * 전체 게시글 개수 조회 (페이징용)
	 * @param sqlSession MyBatis 쿼리 실행 객체
	 * @return 전체 게시글 수
	 */
	public int selectListCount(SqlSessionTemplate sqlSession) {
		// id="itMapper.selectListCount"에 해당하는 쿼리 실행
		return sqlSession.selectOne("itMapper.selectListCount");
	}

	/**
	 * 게시글 목록 조회 (페이징 적용)
	 * @param sqlSession MyBatis 쿼리 실행 객체
	 * @param rowBounds 페이징 정보 (offset, limit)
	 * @return 게시글 목록
	 */
	public List<ItBbs> selectList(SqlSessionTemplate sqlSession, RowBounds rowBounds) {
		// id="itMapper.selectList"에 해당하는 쿼리 실행
		return sqlSession.selectList("itMapper.selectList", null, rowBounds);
	}
	
	/**
	 * 게시글 조회수 증가
	 * @param sqlSession MyBatis 쿼리 실행 객체
	 * @param itNo 조회할 게시글 번호
	 * @return 처리된 행의 수
	 */
	public int increaseItBbsCount(SqlSessionTemplate sqlSession, int itNo) {
		// id="itMapper.increaseItBbsCount"에 해당하는 쿼리 실행
		return sqlSession.update("itMapper.increaseItBbsCount", itNo);
	}
	
	/**
	 * 게시글 상세 조회
	 * @param sqlSession MyBatis 쿼리 실행 객체
	 * @param itNo 조회할 게시글 번호
	 * @return 조회된 ItBbs 객체
	 */
	public ItBbs selectItBbs(SqlSessionTemplate sqlSession, int itNo) {
		// id="itMapper.selectItBbs"에 해당하는 쿼리 실행
		return sqlSession.selectOne("itMapper.selectItBbs", itNo);
	}

	/**
	 * 새로운 게시글 등록
	 * @param sqlSession MyBatis 쿼리 실행 객체
	 * @param f 등록할 ItBbs 객체
	 * @return 처리된 행의 수
	 */
	public int insertItBbs(SqlSessionTemplate sqlSession, ItBbs f) {
		// id="itMapper.insertItBbs"에 해당하는 쿼리 실행
		return sqlSession.insert("itMapper.insertItBbs", f);
	}
	
	/**
	 * 게시글 삭제 (DELETE_STATUS 업데이트)
	 * @param sqlSession MyBatis 쿼리 실행 객체
	 * @param itNo 삭제할 게시글 번호
	 * @return 처리된 행의 수
	 */
	public int deleteItBbs(SqlSessionTemplate sqlSession, int itNo) {
		// id="itMapper.deleteItBbs"에 해당하는 쿼리 실행
		return sqlSession.update("adminMapper.deleteItBbs", itNo);
	}
	
	public int deleteItBbsCheck(SqlSessionTemplate sqlSession, List<Integer> bbsNoList) {
        // 상태값만 변경하는 UPDATE 쿼리를 호출하는 것이 일반적
        return sqlSession.update("adminMapper.deleteItBbsCheck", bbsNoList);
    }
}
