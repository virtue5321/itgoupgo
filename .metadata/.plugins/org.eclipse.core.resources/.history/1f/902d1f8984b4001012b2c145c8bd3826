package com.itgoupgo.community.admin.model.service;

import java.util.List;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.itgoupgo.community.admin.model.dao.AdminDao;
import com.itgoupgo.community.member.model.vo.Member;

@Service
public class AdminService {

	@Autowired
	private SqlSessionTemplate sqlSession;
	
	@Autowired
	private AdminDao adminDao; 
	
	public List<Member> selectMemberList() {
		
		return adminDao.selectMemberList(sqlSession);
	}
	
	// íšŒì› íƒˆí‡´ ìš”ì²­ì— ëŒ€í•œ íŠ¸ëœì­ì…˜ ì²˜ë¦¬ìš© ë©”ì†Œë“œ
	@Transactional
	public int deleteMemberAdmin(String memberId) {
		
		return adminDao.deleteMemberAdmin(sqlSession, memberId);
	}
	
	// ì„ íƒëœ íšŒì› ì „ì²´ ì‚­ì œì— ëŒ€í•œ íŠ¸ëœì­ì…˜ ì²˜ë¦¬ìš© ë©”ì†Œë“œ
	// ğŸ’¡ ì¼ê´„ íšŒì› íƒˆí‡´ (íŠ¸ëœì­ì…˜ ì ìš©) - ë©”ì†Œë“œëª… ë³€ê²½
    @Transactional
    public int deleteCheckMember(List<Integer> memberNoList) {
        
        return adminDao.deleteCheckMember(sqlSession, memberNoList);
    }
	
	// íšŒì› ì´ë¦„ìœ¼ë¡œ ê²€ìƒ‰ì— ëŒ€í•œ íŠ¸ëœì­ì…˜ ì²˜ë¦¬ìš© ë©”ì†Œë“œ
	@Transactional
	public List<Member> searchMemberByName(String userName) {
		
		return adminDao.searchMemberByName(sqlSession, userName);
	}
	
	// íšŒì› ì•„ì´ë””ë¡œ ê²€ìƒ‰ì— ëŒ€í•œ íŠ¸ëœì­ì…˜ ì²˜ë¦¬ìš© ë©”ì†Œë“œ
	@Transactional
	public Member searchMemberById(String memberId) {
		
		return adminDao.searchMemberById(sqlSession, memberId);
	}
	
	
}
