                                                    <%-- [변경] infoNo -> itNo, deleteInfoBbs?infoNo -> deleteItBbs?itNo --%>
                                                    onclick="if(confirm('${post.itNo}번 게시글을 정말 삭제하시겠습니까?')) { location.href='<c:url value="/admin/deleteItBbs?itNo=${post.itNo}" />'; }">
