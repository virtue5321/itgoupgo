                <tbody>
                    <%-- [변경] infoBbsList -> itBbsList --%>
                    <c:choose>
                        <c:when test="${empty itBbsList}">
                            <tr><td colspan="7"><c:if test="${not empty searchKeyword}">"${searchKeyword}"에 대한 검색 결과가 없습니다.</c:if><c:if test="${empty searchKeyword}">등록된 게시글이 없습니다.</c:if></td></tr>
