<body>
    <div class="content">
        <h1>스터디모집 게시판</h1>

        <div class="write-btn-area">
            <!-- 글쓰기 버튼 -->
            <button onclick="location.href='insertForm.st'">글쓰기</button>
        </div>

        <table class="list-table">
            <thead>
                <tr>
                    <th width="10%">글번호</th>
                    <th width="40%">제목</th>
                    <th width="15%">카테고리</th>
                    <th width="15%">작성일</th>
                    <th width="10%">조회수</th>
                    <th width="10%">작성자</th>
                </tr>
            </thead>
            <tbody>
                <c:choose>
                    <c:when test="${ empty list }">
                        <!-- 게시글이 없을 경우 -->
                        <tr>
                            <td colspan="6">게시글이 존재하지 않습니다.</td>
                        </tr>
                    </c:when>
                    <c:otherwise>
                        <!-- 게시글이 있을 경우 목록 출력 -->
                        <c:forEach var="study" items="${ list }">
                            <tr onclick="location.href='detail.st?sno=${ study.studyNo }'">
                                <td>${ study.studyNo }</td>
                                <td>${ study.studyTitle }</td>
                                <td>${ study.studyCategory }</td>
                                <td><fmt:formatDate value="${ study.studyCreateDate }" pattern="yy.MM.dd"/></td>
                                <td>${ study.studyView }</td>
                                <td>${ study.memberNo }</td> <%-- 실제로는 MEMBER_NO로 회원 ID를 조회해야 함 --%>
                            </tr>
                        </c:forEach>
                    </c:otherwise>
                </c:choose>
            </tbody>
        </table>

        <!-- 페이징 영역 -->
        <div class="paging-area">
            <!-- 이전 페이지 버튼 -->
            <c:if test="${ pi.currentPage != 1 }">
                <a href="list.st?cpage=1">
                	&lt;&lt;
                </a>
            </c:if>
            <c:if test="${ pi.currentPage > pi.limit }">
                <a href="list.st?cpage=${ pi.startPage - 1 }">
                	&lt;
                </a>
            </c:if>

            <!-- 페이지 번호 영역 -->
            <c:forEach begin="${ pi.startPage }" end="${ pi.endPage }" var="p">
                <c:choose>
                    <c:when test="${ p == pi.currentPage }">
                        <a class="current">${ p }</a>
                    </c:when>
                    <c:otherwise>
                        <a href="list.st?cpage=${ p }">${ p }</a>
                    </c:otherwise>
                </c:choose>
            </c:forEach>

            <!-- 다음 페이지 버튼 -->
            <c:if test="${ pi.endPage < pi.maxPage }">
                <a href="list.st?cpage=${ pi.endPage + 1 }">
                	&gt;
                </a>
            </c:if>
            <c:if test="${ pi.currentPage != pi.maxPage }">
                <a href="list.st?cpage=${ pi.maxPage }">
                	&gt;&gt;
                </a>
            </c:if>
        </div>
    </div>
</body>
