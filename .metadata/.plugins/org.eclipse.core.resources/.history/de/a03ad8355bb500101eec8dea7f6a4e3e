<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="jakarta.tags.core" %>
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>${boardName} 관리</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
        }
        th { background-color: #f7f7f7; }
    </style>
</head>
<body>
    <h2>📋 ${boardName} 게시글 목록</h2>

    <table>
        <thead>
            <tr>
                <th>글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>작성일</th>
                <th>조회수</th>
            </tr>
        </thead>
        <tbody>
            <c:if test="${empty bbsList}">
                <tr>
                    <td colspan="5">등록된 게시글이 없습니다.</td>
                </tr>
            </c:if>

            <c:forEach var="post" items="${bbsList}">
                <tr>
                    <td>${post.bbsNo}</td>
                    <td>${post.bbsTitle}</td>
                    <td>${post.bbsWriter}</td>
                    <td>${post.createDate}</td>
                    <td>${post.bbsCount}</td>
                </tr>
            </c:forEach>
        </tbody>
    </table>

    <!-- 페이지네이션 -->
    <div>
        <c:if test="${pageInfo.currentPage > 1}">
            <a href="?currentPage=${pageInfo.currentPage - 1}">이전</a>
        </c:if>

        <c:forEach var="p" begin="${pageInfo.startPage}" end="${pageInfo.endPage}">
            <a href="?currentPage=${p}" 
               style="${p == pageInfo.currentPage ? 'font-weight:bold;' : ''}">
               ${p}
            </a>
        </c:forEach>

        <c:if test="${pageInfo.currentPage < pageInfo.maxPage}">
            <a href="?currentPage=${pageInfo.currentPage + 1}">다음</a>
        </c:if>
    </div>
</body>
</html>
