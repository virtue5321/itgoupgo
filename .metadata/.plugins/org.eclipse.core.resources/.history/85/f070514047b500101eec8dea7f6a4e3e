<body>
<div class="wrap">
    <div class="content-container">
        <h1>게시글 관리</h1>

        <div class="search-area">
            <form action="post" method="get" id="postSearchForm">
                
                <select name="boardCode" class="form-control">
                    <option value="ALL" <c:if test="${boardCode eq 'ALL'}">selected</c:if>>-- 전체 게시판 --</option>
                    <option value="FREE" <c:if test="${boardCode eq 'FREE'}">selected</c:if>>자유게시판</option>
                    <option value="STUDY" <c:if test="${boardCode eq 'STUDY'}">selected</c:if>>스터디게시판</option>
                </select>
                <input type="hidden" name="cpage" value="1">
                
                <select name="searchType" class="form-control">
                    <option value="title" <c:if test="${searchType eq 'title'}">selected</c:if>>제목</option>
                    <option value="content" <c:if test="${searchType eq 'content'}">selected</c:if>>내용</option>
                    <option value="writer" <c:if test="${searchType eq 'writer'}">selected</c:if>>작성자</option>
                    <option value="titleContent" <c:if test="${searchType eq 'titleContent'}">selected</c:if>>제목+내용</option>
                </select>
                <input type="text" name="keyword" placeholder="검색어를 입력하세요" value="${keyword}" class="form-control">
                <button type="submit" class="btn btn-primary">검색</button>
                <button type="button" class="btn btn-secondary" onclick="location.href='<c:url value="/admin/post" />'">초기화</button>
            </form>
        </div>

        <div style="margin-bottom: 10px; text-align: left;">
            <button class="btn btn-danger" onclick="deleteCheckPosts();">선택 게시글 삭제</button>
        </div>

        <table class="post-table table table-hover">
            <thead>
                <tr>
                    <th><input type="checkbox" id="selectAllCheckbox"></th>
                    <th>No</th>
                    <th>게시판 코드</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>작성일</th>
                    <th>조회수</th>
                    <th>상태</th>
                </tr>
            </thead>
            <tbody>
                <c:choose>
                    <c:when test="${empty postList}">
                        <tr>
                            <td colspan="8">검색 결과 또는 게시글이 없습니다.</td>
                        </tr>
                    </c:when>
                    <c:otherwise>
                        <c:forEach var="post" items="${postList}">
                            <tr class="<c:if test="${post.deleteStatus eq 'Y'}">table-secondary</c:if>">
                                <td>
                                    <c:if test="${post.deleteStatus eq 'N'}">
                                        <input type="checkbox" class="itemCheckbox" 
                                               value="${post.boardCode}:${post.postNo}">
                                    </c:if>
                                </td>
                                <td>${post.postNo}</td>
                                <td>${post.boardCode}</td>
                                <td class="title-col">
                                    <a href="<c:url value="/post/detail/${post.postNo}" />">
                                        ${post.postTitle}
                                    </a>
                                </td>
                                <td>${post.memberNick}</td>
                                <td><fmt:formatDate value="${post.createDate}" pattern="yyyy-MM-dd" /></td>
                                <td>${post.viewCount}</td>
                                <td>
                                    <c:choose>
                                        <c:when test="${post.deleteStatus eq 'N'}"><span style="color: green;">활성</span></c:when>
                                        <c:otherwise><span style="color: red;">삭제됨</span></c:otherwise>
                                    </c:choose>
                                </td>
                            </tr>
                        </c:forEach>
                    </c:otherwise>
                </c:choose>
            </tbody>
        </table>

        <div class="pagination-container">
            <c:set var="currentQueryString" value="boardCode=${boardCode}&searchType=${searchType}&keyword=${keyword}" />
            
            <c:if test="${pi.currentPage > 1}">
                <a href="<c:url value="/admin/post?cpage=1&${currentQueryString}" />">&lt;&lt;</a>
            </c:if>
            
            <c:choose>
                <c:when test="${pi.currentPage eq 1}"><span>&lt;</span></c:when>
                <c:otherwise><a href="<c:url value="/admin/post?cpage=${pi.currentPage - 1}&${currentQueryString}" />">&lt;</a></c:otherwise>
            </c:choose>
            
            <c:forEach var="p" begin="${pi.startPage}" end="${pi.endPage}">
                <c:choose>
                    <c:when test="${pi.currentPage eq p}"><span class="active">${p}</span></c:when>
                    <c:otherwise><a href="<c:url value="/admin/post?cpage=${p}&${currentQueryString}" />">${p}</a></c:otherwise>
                </c:choose>
            </c:forEach>
            
            <c:choose>
                <c:when test="${pi.currentPage eq pi.maxPage or pi.listCount eq 0}"><span>&gt;</span></c:when>
                <c:otherwise><a href="<c:url value="/admin/post?cpage=${pi.currentPage + 1}&${currentQueryString}" />">&gt;</a></c:otherwise>
            </c:choose>

            <c:if test="${pi.currentPage < pi.maxPage}">
                <a href="<c:url value="/admin/post?cpage=${pi.maxPage}&${currentQueryString}" />">&gt;&gt;</a>
            </c:if>
        </div>
        
    </div>
</div>

<form action="<c:url value="/admin/deletePosts" />" method="post" id="deletePostForm">
    <input type="hidden" name="redirectUrl" value="${pageContext.request.requestURI}?${pageContext.request.getQueryString()}">
    </form>

<script>
    // 🔴 1. 체크박스 전체 선택/해제 기능
    document.getElementById('selectAllCheckbox').addEventListener('change', function() {
        const itemCheckboxes = document.querySelectorAll('.itemCheckbox');
        itemCheckboxes.forEach(checkbox => {
            checkbox.checked = this.checked;
        });
    });

    // 🔴 2. 선택 게시글 일괄 삭제 기능
    function deleteCheckPosts() {
        const form = document.getElementById('deletePostForm');
        const selectedCheckboxes = document.querySelectorAll('.itemCheckbox:checked');

        if (selectedCheckboxes.length === 0) {
            alert('삭제할 게시글을 하나 이상 선택해 주세요.');
            return;
        }

        if (confirm('선택된 ' + selectedCheckboxes.length + '개의 게시글을 정말 삭제(상태 변경) 처리하시겠습니까?')) {
            // 이전에 추가된 히든 input 제거
            form.querySelectorAll('input[name="postDataList"]').forEach(input => input.remove());
            
            // 선택된 체크박스의 value(boardCode:postNo)를 hidden input으로 폼에 추가하여 전송
            selectedCheckboxes.forEach(checkbox => {
                const hiddenInput = document.createElement('input');
                hiddenInput.type = 'hidden';
                hiddenInput.name = 'postDataList'; 
                hiddenInput.value = checkbox.value; // ex: "FREE:100"
                form.appendChild(hiddenInput);
            });
            
            form.submit(); // POST 요청 전송
        }
    }

    // 🔴 3. 알림 메시지 (Session에 alertMsg가 있을 경우)
    <c:if test="${not empty sessionScope.alertMsg}">
        alert('${sessionScope.alertMsg}');
        <c:remove var="alertMsg" scope="session"/>
    </c:if>

</script>
</body>
</html>