        border-radius: 4px;
        transition: background-color 0.3s;
    }
    .pagination-container .active {
        background-color: #5a5ce8;
        color: white;
        border-color: #5a5ce8;
    }
    .search-area {
        margin-bottom: 20px;
        display: flex;
        justify-content: center;
        gap: 10px;
    }
