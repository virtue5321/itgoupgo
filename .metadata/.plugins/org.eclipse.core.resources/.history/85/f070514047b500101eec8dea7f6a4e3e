<form action="<c:url value="/admin/deletePosts" />" method="post" id="deletePostForm">
    <input type="hidden" name="redirectUrl" value="${pageContext.request.requestURI}?${pageContext.request.getQueryString()}">
    </form>

<script>
    // ğŸ”´ 1. ì²´í¬ë°•ìŠ¤ ì „ì²´ ì„ íƒ/í•´ì œ ê¸°ëŠ¥
    document.getElementById('selectAllCheckbox').addEventListener('change', function() {
        const itemCheckboxes = document.querySelectorAll('.itemCheckbox');
        itemCheckboxes.forEach(checkbox => {
            checkbox.checked = this.checked;
        });
    });

    // ğŸ”´ 2. ì„ íƒ ê²Œì‹œê¸€ ì¼ê´„ ì‚­ì œ ê¸°ëŠ¥
    function deleteCheckPosts() {
        const form = document.getElementById('deletePostForm');
        const selectedCheckboxes = document.querySelectorAll('.itemCheckbox:checked');

        if (selectedCheckboxes.length === 0) {
            alert('ì‚­ì œí•  ê²Œì‹œê¸€ì„ í•˜ë‚˜ ì´ìƒ ì„ íƒí•´ ì£¼ì„¸ìš”.');
            return;
        }

        if (confirm('ì„ íƒëœ ' + selectedCheckboxes.length + 'ê°œì˜ ê²Œì‹œê¸€ì„ ì •ë§ ì‚­ì œ(ìƒíƒœ ë³€ê²½) ì²˜ë¦¬í•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) {
            // ì´ì „ì— ì¶”ê°€ëœ íˆë“  input ì œê±°
            form.querySelectorAll('input[name="postDataList"]').forEach(input => input.remove());
            
            // ì„ íƒëœ ì²´í¬ë°•ìŠ¤ì˜ value(boardCode:postNo)ë¥¼ hidden inputìœ¼ë¡œ í¼ì— ì¶”ê°€í•˜ì—¬ ì „ì†¡
            selectedCheckboxes.forEach(checkbox => {
                const hiddenInput = document.createElement('input');
                hiddenInput.type = 'hidden';
                hiddenInput.name = 'postDataList'; 
                hiddenInput.value = checkbox.value; // ex: "FREE:100"
                form.appendChild(hiddenInput);
            });
            
            form.submit(); // POST ìš”ì²­ ì „ì†¡
        }
    }

    // ğŸ”´ 3. ì•Œë¦¼ ë©”ì‹œì§€ (Sessionì— alertMsgê°€ ìˆì„ ê²½ìš°)
    <c:if test="${not empty sessionScope.alertMsg}">
        alert('${sessionScope.alertMsg}');
        <c:remove var="alertMsg" scope="session"/>
    </c:if>

</script>
