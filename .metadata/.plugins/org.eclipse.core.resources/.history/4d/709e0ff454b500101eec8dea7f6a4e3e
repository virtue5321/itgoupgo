<script>
    // 1. ê²€ìƒ‰ í¼ ì•¡ì…˜ ë³€ê²½ ë¡œì§ (ê²Œì‹œê¸€ ê´€ë¦¬ì—ì„œëŠ” í•˜ë‚˜ì˜ ê²€ìƒ‰ ì—”ë“œí¬ì¸íŠ¸(/admin/searchPost)ë¥¼ ì‚¬ìš©í•œë‹¤ê³  ê°€ì •)
    document.getElementById('searchForm').addEventListener('submit', function(e) {
        const form = e.target;
        // ê²€ìƒ‰ ì¡°ê±´ê³¼ í‚¤ì›Œë“œë¥¼ í¬í•¨í•˜ì—¬ /admin/searchPostë¡œ ì „ì†¡
        form.action = `<c:url value="/admin/searchPost" />`;
    });

    // 2. ì¼ê´„ ì‚­ì œ ë¡œì§ (confirmBulkDelete í•¨ìˆ˜)
    function confirmBulkDelete() {
        // .itemCheckboxPost í´ë˜ìŠ¤ë¥¼ ì‚¬ìš©í•©ë‹ˆë‹¤.
        const selectedCheckboxes = document.querySelectorAll('.itemCheckboxPost:checked');

        if (selectedCheckboxes.length === 0) {
            alert('ì¼ê´„ ì‚­ì œí•  ê²Œì‹œê¸€ì„ 1ê°œ ì´ìƒ ì„ íƒí•´ ì£¼ì„¸ìš”.');
            return;
        }

        if (confirm(`ì´ ${selectedCheckboxes.length}ê°œì˜ ê²Œì‹œê¸€ì„ ì¼ê´„ ì‚­ì œ ì²˜ë¦¬í•˜ì‹œê² ìŠµë‹ˆê¹Œ?`)) {
            const form = document.getElementById('bulkDeleteForm');
            
            // ì´ì „ ì „ì†¡ ì‹œë„ì—ì„œ ì¶”ê°€ëœ í•„ë“œê°€ ìˆë‹¤ë©´ ëª¨ë‘ ì œê±°
            form.innerHTML = ''; 

            // ì„ íƒëœ ì²´í¬ë°•ìŠ¤ì˜ valueë¥¼ hidden inputìœ¼ë¡œ í¼ì— ì¶”ê°€í•˜ì—¬ ì „ì†¡
            // value í˜•ì‹ì€ "ê²Œì‹œê¸€ë²ˆí˜¸_ì¹´í…Œê³ ë¦¬" (ì˜ˆ: "123_FREE")ë¥¼ ì‚¬ìš©í•œë‹¤ê³  ê°€ì •
            selectedCheckboxes.forEach(checkbox => {
                const hiddenInput = document.createElement('input');
                hiddenInput.type = 'hidden';
                hiddenInput.name = 'postInfoList'; // Controllerì˜ @RequestParam ì´ë¦„ê³¼ ì¼ì¹˜
                hiddenInput.value = checkbox.value; // ex: 123_FREE
                form.appendChild(hiddenInput);
            });
            
            form.submit(); // POST ìš”ì²­ ì „ì†¡
        }
    }

    // 3. ì²´í¬ë°•ìŠ¤ ì „ì²´ ì„ íƒ/í•´ì œ ê¸°ëŠ¥
    document.addEventListener('DOMContentLoaded', (event) => {
        // ID ë° í´ë˜ìŠ¤ ì´ë¦„ì„ member -> postë¡œ ë³€ê²½
        const selectAllCheckbox = document.getElementById('selectAllCheckboxPost');
        const itemCheckboxes = document.querySelectorAll('.itemCheckboxPost');

        selectAllCheckbox.addEventListener('change', function() {
            itemCheckboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
        });
        
        itemCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', () => {
                const checkedItems = document.querySelectorAll('.itemCheckboxPost:checked').length;
                if (!checkbox.checked) {
                    selectAllCheckbox.checked = false;
                } else if (checkedItems === itemCheckboxes.length && itemCheckboxes.length > 0) {
                    selectAllCheckbox.checked = true;
                }
            });
        });
    });
 </script>
