    }
    .pagination-container .active {
        background-color: #5a5ce8; /* 사용자님의 기존 버튼 색상과 통일 */
        color: white;
        border: 1px solid #5a5ce8;
    }
    .pagination-container .disabled {
        color: #ccc;
        pointer-events: none;
        background-color: #f9f9f9;
    }
