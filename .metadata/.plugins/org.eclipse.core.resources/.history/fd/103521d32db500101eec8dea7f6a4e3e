package com.itgoupgo.community.admin.model.service;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.itgoupgo.community.admin.model.dao.AdminDao;
import com.itgoupgo.community.admin.model.vo.PostVO;
import com.itgoupgo.community.common.model.vo.Pagination;
import com.itgoupgo.community.member.model.vo.Member;

@Service
public class AdminService {

	@Autowired
	private SqlSessionTemplate sqlSession;
	
	@Autowired
	private AdminDao adminDao; 
	
	/**
     * 1. ì „ì²´ íšŒì› ìˆ˜ ì¡°íšŒ (í˜ì´ì§•ìš©)
     */
    public int selectListCount() {
        return adminDao.selectListCount(sqlSession);
    }
    
    /**
     * 2. Pagination ê°ì²´ ìƒì„± (ë¡œì§ì€ Serviceì—ì„œ ì²˜ë¦¬í•˜ëŠ” ê²ƒì´ ì¼ë°˜ì )
     */
    public Pagination getPagination(int currentPage, int listCount) {
        // [ğŸ’¡ ê°€ì •] í•œ í˜ì´ì§€ ëª©ë¡ ìˆ˜ 10ê°œ, í˜ì´ì§• ë²„íŠ¼ ìˆ˜ 10ê°œë¡œ ê³ ì •
        int pageLimit = 10;
        int listLimit = 10; 
        
        return new Pagination(currentPage, listCount, pageLimit, listLimit);
    }
	
    /**
     * 3. íšŒì› ì „ì²´ ëª©ë¡ ì¡°íšŒ
     */
	public List<Member> selectMemberList(Pagination pageInfo) {
		
		return adminDao.selectMemberList(sqlSession, pageInfo);
	}
	
    /**
     * 4. íšŒì› ë‹¨ì¼ íƒˆí‡´ (íŠ¸ëœì­ì…˜ ì ìš©)
     */
	@Transactional
	public int deleteMemberAdmin(String userId) {
		
		return adminDao.deleteMemberAdmin(sqlSession, userId);
	}
    
    /**
     * 5. ì¼ê´„ íšŒì› íƒˆí‡´ (íŠ¸ëœì­ì…˜ ì ìš©)
     */
    @Transactional
    public int deleteCheckMember(List<Integer> memberNoList) {
        
        return adminDao.deleteCheckMember(sqlSession, memberNoList);
    }
    
    /**
     * 6. íšŒì› ì´ë¦„ìœ¼ë¡œ ê²€ìƒ‰
     */
    public List<Member> searchMemberByName(String memberName) {
        return adminDao.searchMemberByName(sqlSession, memberName);
    }

    /**
     * 7. íšŒì› ì•„ì´ë””ë¡œ ê²€ìƒ‰
     */
    public Member searchMemberById(String memberId) {
        return adminDao.searchMemberById(sqlSession, memberId);
    }
    
    // ----------------------------------------------------
    // ğŸŸ¢ 6. íšŒì› ìƒì„¸ ì¡°íšŒ ê¸°ëŠ¥ ì¶”ê°€
    // ----------------------------------------------------
    /**
     * íšŒì› ìƒì„¸ ì¡°íšŒ: Member ë‹¨ì¼ ê°ì²´ ë°˜í™˜
     */
    public Member selectMemberDetail(int memberNo) {
        return adminDao.selectMemberDetail(sqlSession, memberNo);
    }
    
    /**
     * ê²Œì‹œê¸€ í†µí•© ëª©ë¡ ì¡°íšŒ ë° í˜ì´ì§• ì²˜ë¦¬ë¥¼ ìœ„í•œ ì„œë¹„ìŠ¤
     * @param currentPage í˜„ì¬ í˜ì´ì§€ ë²ˆí˜¸
     * @return Map (postList: ê²Œì‹œê¸€ ëª©ë¡, pi: í˜ì´ì§• ì •ë³´)
     */
    public Map<String, Object> selectPostList(int currentPage) {
        
        // 1. ì „ì²´ ê²Œì‹œê¸€ ìˆ˜ ì¡°íšŒ (Paginationì— ì‚¬ìš©)
        int listCount = adminDao.selectPostListCount(sqlSession);
        
        // 2. í˜ì´ì§• ì²˜ë¦¬ ê°ì²´ ìƒì„±
        int pageLimit = 10; // í˜ì´ì§€ë°” ìµœëŒ€ ê°¯ìˆ˜
        int boardLimit = 10; // í•œ í˜ì´ì§€ì— ë³´ì—¬ì¤„ ê¸€ ê°¯ìˆ˜
        
        Pagination pi = new Pagination(listCount, currentPage, pageLimit, boardLimit);
        
        // 3. í˜„ì¬ í˜ì´ì§€ì— ë³´ì—¬ì¤„ ë°ì´í„°ì˜ ì‹œì‘ê°’/ëê°’ ê³„ì‚°
        int startValue = (pi.getCurrentPage() - 1) * pi.getBoardLimit() + 1;
        int endValue = pi.getCurrentPage() * pi.getBoardLimit();
        
        Map<String, Integer> paramMap = new HashMap<>();
        paramMap.put("startValue", startValue);
        paramMap.put("endValue", endValue);
        // boardCodeëŠ” ì „ì²´ ì¡°íšŒì´ë¯€ë¡œ null (mapperì—ì„œ ì¡°ê±´ë¬¸ì€ ì‹¤í–‰ë˜ì§€ ì•ŠìŒ)
        
        // 4. ê²Œì‹œê¸€ ëª©ë¡ ì¡°íšŒ
        List<PostVO> postList = adminDao.selectPostList(sqlSession, paramMap);
        
        Map<String, Object> resultMap = new HashMap<>();
        resultMap.put("postList", postList);
        resultMap.put("pi", pi);
        
        return resultMap;
    }

    
}