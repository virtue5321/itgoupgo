        <tbody>
          <c:choose>
            <c:when test="${empty memberList}">
              <tr>
                <td colspan="10">조회된 회원이 없습니다.</td>
              </tr>
            </c:when>
            <c:otherwise>
              <c:forEach var="member" items="${memberList}" varStatus="status">
                <tr>
                  <td><input type="checkbox" class="itemCheckboxMember" value="${member.memberId}"></td>
                  <td>${member.memberNo}</td>
                  <td>${member.memberId}</td>
                  <td>${member.memberName}</td>
                  <td>${member.gender eq 'M' ? '남' : (member.gender eq 'F' ? '여' : '-')}</td>
                  <td>${member.phone}</td>
                  <td>${member.email}</td>
                  <td><fmt:formatDate value="${member.enrollDate}" pattern="yyyy-MM-dd" /></td>
                  <td>
                    <c:choose>
                        <c:when test="${member.memberStatus eq 'Y'}"><span style="color: green;">활성</span></c:when>
                        <c:otherwise><span style="color: red;">탈퇴/정지</span></c:otherwise>
                    </c:choose>
                  </td>
                  <td>
                    <button class="btn btn-primary" onclick="location.href='<c:url value="/admin/memberDetail?memberId=${member.memberId}" />'">상세</button>
                    <c:if test="${member.memberStatus eq 'Y'}">
                        <button class="btn btn-danger" 
                                onclick="if(confirm('${member.memberName} 님을 정말 탈퇴시키겠습니까?')) { 
                                    location.href='<c:url value="/admin/delete?memberId=${member.memberId}" />'; 
                                }">
                          탈퇴
                        </button>
                    </c:if>
                  </td>
                </tr>
              </c:forEach>
            </c:otherwise>
          </c:choose>
        </tbody>

      </table>

      <div class="pagination-container">
        <c:set var="pi" value="${pi}" />

        <c:choose>
            <c:when test="${pi.currentPage eq 1}">
                <span class="disabled">&lt;</span>
            </c:when>
            <c:otherwise>
                <a href="<c:url value="/admin/member?cpage=${pi.currentPage - 1}" />">&lt;</a>
            </c:otherwise>
        </c:choose>

        <c:forEach begin="${pi.startPage}" end="${pi.endPage}" var="p">
            <c:choose>
                <c:when test="${pi.currentPage eq p}">
                    <a href="#" class="active">${p}</a>
                </c:when>
                <c:otherwise>
                    <a href="<c:url value="/admin/member?cpage=${p}" />">${p}</a>
                </c:otherwise>
            </c:choose>
        </c:forEach>

        <c:choose>
            <c:when test="${pi.currentPage eq pi.maxPage || pi.maxPage eq 0}">
                <span class="disabled">&gt;</span>
            </c:when>
            <c:otherwise>
                <a href="<c:url value="/admin/member?cpage=${pi.currentPage + 1}" />">&gt;</a>
            </c:otherwise>
        </c:choose>
