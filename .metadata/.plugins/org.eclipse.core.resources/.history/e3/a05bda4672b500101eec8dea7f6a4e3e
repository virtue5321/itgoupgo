package com.itgoupgo.community.info.model.vo;

import java.sql.Date;

/**
 * 정보 공유 게시판 (INFO_BBS) VO
 * 관리자 페이지 목록 조회 시 작성자 닉네임(memberNick)을 포함하도록 수정되었습니다.
 */
public class InfoBbs {

	// INFO_BBS 테이블 필드
	private int infoNo;           // INFO_NO
	private int memberNo;         // MEMBER_NO
	private String infoTitle;     // INFO_TITLE
	private String infoContent;   // INFO_CONTENT
	private int infoView;         // INFO_VIEW
	private Date infoCreateDate;  // INFO_CREATE_DATE
	private String infoDeleteStatus; // INFO_DELETE_STATUS
	private String infoCategory;  // INFO_CATEGORY (이전 ORA-01400 해결을 위해 추가된 것으로 추정)
	
	// MEMBER 테이블 JOIN 결과 필드
	private String memberNick;    // MEMBER_NICK (작성자 닉네임)
	
	public InfoBbs() {}

	// 전체 필드 생성자 (옵션)
	public InfoBbs(int infoNo, int memberNo, String infoTitle, String infoContent, int infoView, Date infoCreateDate,
			String infoDeleteStatus, String infoCategory, String memberNick) {
		super();
		this.infoNo = infoNo;
		this.memberNo = memberNo;
		this.infoTitle = infoTitle;
		this.infoContent = infoContent;
		this.infoView = infoView;
		this.infoCreateDate = infoCreateDate;
		this.infoDeleteStatus = infoDeleteStatus;
		this.infoCategory = infoCategory;
		this.memberNick = memberNick;
	}

	// Getter and Setter
	
	public int getInfoNo() {
		return infoNo;
	}

	public void setInfoNo(int infoNo) {
		this.infoNo = infoNo;
	}
	
	/**
	 * ✅ JSP 호환성 Getter 추가
	 * admin/infoBbsManage.jsp 에서 ${item.bbsNo} 로 접근 시 infoNo를 반환하도록 처리
	 */
	public int getBbsNo() {
		return this.infoNo;
	}

	public int getMemberNo() {
		return memberNo;
	}

	public void setMemberNo(int memberNo) {
		this.memberNo = memberNo;
	}

	public String getInfoTitle() {
		return infoTitle;
	}

	public void setInfoTitle(String infoTitle) {
		this.infoTitle = infoTitle;
	}

	public String getInfoContent() {
		return infoContent;
	}

	public void setInfoContent(String infoContent) {
		this.infoContent = infoContent;
	}

	public int getInfoView() {
		return infoView;
	}

	public void setInfoView(int infoView) {
		this.infoView = infoView;
	}

	public Date getInfoCreateDate() {
		return infoCreateDate;
	}

	public void setInfoCreateDate(Date infoCreateDate) {
		this.infoCreateDate = infoCreateDate;
	}

	public String getInfoDeleteStatus() {
		return infoDeleteStatus;
	}

	public void setInfoDeleteStatus(String infoDeleteStatus) {
		this.infoDeleteStatus = infoDeleteStatus;
	}

	public String getInfoCategory() {
		return infoCategory;
	}

	public void setInfoCategory(String infoCategory) {
		this.infoCategory = infoCategory;
	}
	
	// 새로 추가된 memberNick Getter/Setter
	public String getMemberNick() {
		return memberNick;
	}

	public void setMemberNick(String memberNick) {
		this.memberNick = memberNick;
	}
	
	// toString (옵션)
	@Override
	public String toString() {
		return "InfoBbs [infoNo=" + infoNo + ", memberNo=" + memberNo + ", infoTitle=" + infoTitle + ", infoContent="
				+ infoContent + ", infoView=" + infoView + ", infoCreateDate=" + infoCreateDate + ", infoDeleteStatus="
				+ infoDeleteStatus + ", infoCategory=" + infoCategory + ", memberNick=" + memberNick + "]";
	}
}
