        background-color: #f0f0f0;
    }
    .pagination-container .active {
        background-color: #5a5ce8;
        color: white;
        border: 1px solid #5a5ce8;
    }
    .pagination-container .disabled {
        color: #ccc;
        pointer-events: none;
        background-color: #f9f9f9;
    }
