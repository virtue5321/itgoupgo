    <main>
      <h1>👥 회원 관리</h1>
      <p>등록된 회원 목록을 확인하고 관리할 수 있습니다.</p>

      <%-- 🚩 [수정] 검색 폼: action 경로와 select name/value를 Controller와 통일 --%>
      <form class="search-form" id="searchForm" 
            action="<c:url value="/admin/search" />" method="get" 
            style="margin-bottom: 20px; display:flex; gap:10px; align-items:center; background:#fff; padding:15px; border-radius:10px;
 box-shadow:0 2px 5px rgba(0,0,0,0.05);">
        
        <%-- 🚩 [수정] name을 condition으로 변경하고 option value를 Controller에 맞춤 --%>
        <select name="condition" id="searchCondition"
                style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
          <option value="memberName" ${searchCondition eq 'memberName' ? 'selected' : ''}>이름</option>
          <option value="memberId" ${searchCondition eq 'memberId' ? 'selected' : ''}>아이디</option>
        </select>
        
        <input type="text" name="keyword"
               value="${searchKeyword}" 
               placeholder="검색어를 입력하세요" 
               style="flex-grow: 1; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
        
        <button type="submit" style="background:#5a5ce8;
 color:white; border:none; padding:8px 15px; border-radius:4px; cursor:pointer;">검색</button>
      </form>
      
      <%-- 💡 [유지] 일괄 삭제 폼 --%>
      <form id="bulkDeleteForm" action="<c:url value="/admin/deleteCheckMember" />" method="post" style="display:none;"></form>

      <div style="display:flex;
 justify-content:flex-end; align-items:center; margin-bottom:10px;">
          <button class="btn btn-danger" onclick="confirmBulkDelete()">
            선택 항목 일괄 탈퇴
          </button>
      </div>

      <table>
        <thead>
          <tr>
            <th><input type="checkbox" id="selectAllCheckboxMember"></th> 
            <th>회원번호</th>
            <th>아이디</th>
            <th>이름</th>
            <th>성별</th>
            <th>전화번호</th>
            <th>이메일</th>
            <th>가입일</th>
            <th>관리</th>
          </tr>
        </thead>
        <tbody>
          <c:choose>
            <c:when test="${empty memberList}">
              <tr>
                <td colspan="9">
                    <c:if test="${not empty searchKeyword}">
                        "${searchKeyword}"에 대한 검색 결과가 없습니다.
                    </c:if>
                    <c:if test="${empty searchKeyword}">
                        등록된 회원 정보가 없습니다.
                    </c:if>
                </td>
              </tr>
            </c:when>
            <c:otherwise>
              <c:forEach 
 var="member" items="${memberList}">
                <tr>
                  <%-- 일괄 탈퇴를 위한 체크박스 --%>
                  <td><input type="checkbox" class="itemCheckboxMember" name="memberNoList" value="${member.memberNo}"></td>
                  <td>${member.memberNo}</td>
                  
                  <%-- 회원 상세 보기 링크 (아이디 클릭) --%>
                  <td>
                    <a href="<c:url value="/admin/memberDetail?memberNo=${member.memberNo}" />" 
                      style="text-decoration: underline;
 color: #5a5ce8;">
                        ${member.memberId}
                    </a>
                  </td>
          
                  <td>${member.memberName}</td>
                  <td>${member.gender eq 'M' ? '남' : (member.gender eq 'F' ? '여' : '-')}</td>
                  <td>${member.phone}</td>
                  <td>${member.email}</td>
                  <td><fmt:formatDate value="${member.enrollDate}" pattern="yyyy-MM-dd" /></td>
                  <td>
                    <c:choose>
                      <c:when test="${member.memberStatus eq 'Y'}">
                        <%-- 단일 탈퇴 버튼 --%>
                        <button class="btn btn-danger"
                                onclick="if(confirm('${member.memberName} 님을 정말 탈퇴시키겠습니까?')) { 
                                    location.href='<c:url value="/admin/delete?memberId=${member.memberId}" />';
}">
                          단일 탈퇴
                        </button>
                      </c:when>
                      <c:otherwise>
                        <span style="color: gray;">탈퇴됨</span>
                      </c:otherwise>
                    </c:choose>
                  </td>
                </tr>
            </c:forEach>
            </c:otherwise>
          </c:choose>
        </tbody>
      </table>

      <%-- 🚩 [수정] 페이징바 동적 출력 로직 (검색 결과에도 적용) --%>
      <c:if test="${pi.listCount > 0}"> <%-- 조회된 결과가 있을 때만 페이징바 표시 --%>
          <div class="pagination-container">
            
            <c:set var="pi" value="${pi}" />
            
            <%-- 1. 현재 검색 중인지 확인 및 URL 기본 경로 설정 --%>
            <c:set var="isSearching" value="${not empty searchKeyword}" />
            <c:set var="baseUrl" value="${isSearching ? '/admin/search' : '/admin/member'}" />
            
            <%-- 2. 검색 중일 경우 파라미터 쿼리 스트링 준비 --%>
            <c:set var="searchParams" value="" />
            <c:if test="${isSearching}">
                <%-- 💡 [주의] Controller가 condition과 keyword를 기대함 --%>
                <c:set var="searchParams" value="&amp;condition=${searchCondition}&amp;keyword=${searchKeyword}" />
            </c:if>

            <%-- 이전 페이지 링크 --%>
            <c:choose>
                <c:when test="${pi.currentPage eq 1}">
                    <span class="disabled">&lt;</span>
                </c:when>
                <c:otherwise>
                    <a href="<c:url value="${baseUrl}?cpage=${pi.currentPage - 1}${searchParams}" />">&lt;</a>
                </c:otherwise>
            </c:choose>

            <%-- 페이지 번호 forEach --%>
            <c:forEach begin="${pi.startPage}" end="${pi.endPage}" var="p">
                <c:choose>
                    <c:when test="${pi.currentPage eq p}">
                        <a href="#" class="active">${p}</a>
                    </c:when>
                    <c:otherwise>
                        <a href="<c:url value="${baseUrl}?cpage=${p}${searchParams}" />">${p}</a>
                    </c:otherwise>
                </c:choose>
            </c:forEach>

            <%-- 다음 페이지 링크 --%>
            <c:choose>
                <c:when test="${pi.currentPage eq pi.maxPage || pi.maxPage eq 0}">
                    <span class="disabled">&gt;</span>
                </c:when>
                <c:otherwise>
                    <a href="<c:url value="${baseUrl}?cpage=${pi.currentPage + 1}${searchParams}" />">&gt;</a>
                </c:otherwise>
            </c:choose>
          </div>
      </c:if>
    </main>
  </div>

  <footer>ⓒ 2025 IT GO UP GO. All Rights Reserved.</footer>

<script>
    // 🚩 [제거] 기존의 검색 폼 action을 동적으로 변경하는 로직은 제거되었습니다.
    // 폼의 action이 '/admin/search'로 고정되었기 때문입니다.

    // 🔴 1. 일괄 삭제 로직 (confirmBulkDelete 함수) (유지)
    function confirmBulkDelete() {
        const selectedCheckboxes = document.querySelectorAll('.itemCheckboxMember:checked');

        if (selectedCheckboxes.length === 0) {
            alert('일괄 탈퇴할 회원을 1명 이상 선택해 주세요.');
            return;
        }

        if (confirm(`총 ${selectedCheckboxes.length}명의 회원을 일괄 탈퇴 처리하시겠습니까?`)) {
            const form = document.getElementById('bulkDeleteForm');
            // 이전 전송 시도에서 추가된 필드가 있다면 모두 제거
            form.innerHTML = '';
            // 선택된 체크박스의 value를 hidden input으로 폼에 추가하여 전송
            selectedCheckboxes.forEach(checkbox => {
                const hiddenInput = document.createElement('input');
                hiddenInput.type = 'hidden';
                hiddenInput.name = 'memberNoList'; // Controller의 @RequestParam 이름과 일치
                hiddenInput.value = checkbox.value;
                form.appendChild(hiddenInput);
            });
            form.submit(); // POST 요청 전송
        }
    }

    // 🔴 2. 체크박스 전체 선택/해제 기능 (유지)
    document.addEventListener('DOMContentLoaded', (event) => {
        const selectAllCheckbox = document.getElementById('selectAllCheckboxMember');
        const itemCheckboxes = document.querySelectorAll('.itemCheckboxMember');

        selectAllCheckbox.addEventListener('change', function() {
            itemCheckboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
        });
        
        itemCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', () => {
                const checkedItems = document.querySelectorAll('.itemCheckboxMember:checked').length;
                if (!checkbox.checked) {
                    selectAllCheckbox.checked = false;
                } else if (checkedItems === itemCheckboxes.length) {
                    selectAllCheckbox.checked = true;
                }
            });
        });
    });
</script>
</body>
</html>