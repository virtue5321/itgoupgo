package com.itgoupgo.community.admin.model.service;

import java.util.List;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.itgoupgo.community.admin.model.dao.AdminDao;
import com.itgoupgo.community.member.model.vo.Member;

@Service
public class AdminService {

	@Autowired
	private SqlSessionTemplate sqlSession;
	
	@Autowired
	private AdminDao adminDao; 
	
	public List<Member> selectMemberList() {
		
		return adminDao.selectMemberList(sqlSession);
	}
	
	// 회원 탈퇴 요청에 대한 트랜잭션 처리용 메소드
	@Transactional
	public int deleteMemberAdmin(String userId) {
		
		return adminDao.deleteMemberAdmin(sqlSession, userId);
	}
	
	// 회원 이름으로 검색에 대한 트랜잭션 처리용 메소드
	@Transactional
	public List<Member> searchMemberName(String userName) {
		
		return adminDao.searchMemberName(sqlSession, userName);
	}
	
	// 회원 아이디로 검색에 대한 트랜잭션 처리용 메소드
	@Transactional
	public Member searchMemberId(String userId) {
		
		return adminDao.searchMemberId(sqlSession, userId);
	}
	
}
