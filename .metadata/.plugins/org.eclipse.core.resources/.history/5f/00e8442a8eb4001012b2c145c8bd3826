package com.itgoupgo.community.admin.model.service;

import java.util.List;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.itgoupgo.community.admin.model.dao.AdminDao;
import com.itgoupgo.community.common.model.vo.PageInfo; // 💡 [추가]
import com.itgoupgo.community.member.model.vo.Member;

@Service
public class AdminService {

	@Autowired
	private SqlSessionTemplate sqlSession;
	
	@Autowired
	private AdminDao adminDao; 
	
    // 💡 [추가] 1. 전체 회원 수 조회 (페이징용)
    public int selectListCount() {
        return adminDao.selectListCount(sqlSession);
    }
	
    // 💡 [수정] 2. 페이징 정보(PageInfo)를 받아 목록 조회
	public List<Member> selectMemberList(PageInfo pi) {
		return adminDao.selectMemberList(sqlSession, pi);
	}
	
    // 회원 상세 조회 (기존 로직 유지)
    public Member selectMemberDetail(String memberId) {
		return adminDao.selectMemberDetail(sqlSession, memberId);
	}

	// 회원 탈퇴 (기존 로직 유지)
	@Transactional
	public int deleteMemberAdmin(String userId) {
		return adminDao.deleteMemberAdmin(sqlSession, userId);
	}
}