    <script>
        // 데모용 자바스크립트 함수 (실제 동작은 하지 않음)
        function editPost(id) {
            console.log(id + "번 게시글 수정");
            alertBox("게시글 수정 기능 (번호: " + id + ")", "알림");
        }

        function deletePost(id) {
            console.log(id + "번 게시글 삭제");
            // 실제 구현에서는 모달/팝업으로 확인 과정을 거쳐야 합니다.
            alertBox("게시글 삭제 기능 (번호: " + id + ")", "알림");
        }
        
        // alert() 대신 사용할 커스텀 메시지 박스
        function alertBox(message, title) {
            const existingBox = document.getElementById('custom-alert-box');
            if (existingBox) existingBox.remove();
            
            const box = document.createElement('div');
            box.id = 'custom-alert-box';
            box.style.cssText = `
                position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);
                background: white; padding: 20px; border-radius: 8px; box-shadow: 0 4px 15px rgba(0,0,0,0.2);
                z-index: 1000; max-width: 300px; width: 90%; text-align: center;
                border: 2px solid #5a5ce8;
            `;
            
            box.innerHTML = `
                <h3 style="margin-top: 0; color: #5a5ce8; border-bottom: 1px solid #eee; padding-bottom: 10px;">${title}</h3>
                <p style="margin: 15px 0;">${message}</p>
                <button onclick="document.getElementById('custom-alert-box').remove()" 
                        style="padding: 8px 15px; background-color: #5a5ce8; color: white; border: none; border-radius: 4px; cursor: pointer;">
                    확인
                </button>
            `;
            document.body.appendChild(box);
        }
    </script>
